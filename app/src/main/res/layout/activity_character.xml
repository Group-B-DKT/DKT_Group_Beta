<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Character">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="421dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="435dp"
        android:layout_marginBottom="22dp"
        android:text="@string/character"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/character1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character1"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/character3"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_marginStart="280dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="244dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/character3"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_marginStart="520dp"
        android:layout_marginEnd="293dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="119dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/character5"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_marginStart="520dp"
        android:layout_marginEnd="293dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="244dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/character2"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_marginStart="400dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="119dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/character4"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_marginStart="400dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="244dp"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>